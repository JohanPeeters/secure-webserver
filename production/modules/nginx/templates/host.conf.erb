upstream secappdev_cluster {
		server 0.0.0.0:3000;
		server 0.0.0.0:3001;
}

server {

	listen   80; 
	listen   443 ssl;
	server_name  localhost <%= @host %> *.<%= @host %> secure-application-development.org *.secure-application-development 80.68.94.29;

#	ssl_certificate  /etc/ssl/certs/<%= @host %>.crt;
	ssl_certificate  /etc/ssl/certs/certsigned.crt;
	ssl_certificate_key  /etc/ssl/private/keys.key;
#	ssl_certificate_key  /etc/ssl/private/<%= @host %>.key;

	#ssl_session_timeout  5m;

	ssl_protocols  SSLv3 TLSv1.1 TLSv1.2;
	#ssl_ciphers  ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;

#	add_header Strict-Transport-Security max-age=15768000;
		
	access_log  /var/log/nginx/localhost.access.log;
	error_log /var/log/nginx/error.log info;

	proxy_intercept_errors on;

	root /var/www/nginx-default;

        error_page  404              /404.html;
	location = /404.html$ {
		root /var/www/nginx-default;
		internal;
	}

        error_page  403              /403.html;
	location = /403.html$ {
		root /var/www/nginx-default;
		internal;
	}

}
